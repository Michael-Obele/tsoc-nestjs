model UserNest {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int       @id @default(autoincrement())
  title     String
  content   String?
  published Boolean?  @default(false)
  author    UserNest? @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Todo {
  id          Int        @id @default(autoincrement())
  description String?
  task        String
  status      TaskStatus
  updatedAt   DateTime   @updatedAt
  createdAt   DateTime   @default(now())
}

enum TaskStatus {
  DONE
  ACTIVE
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  name     String
}
